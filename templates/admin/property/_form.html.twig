<div class="col-md-5">
    <div class="row flex">
        {% if property.pictures %}
            {% for picture in property.pictures %}
                <div class="col">
                    <img src="{{ vich_uploader_asset(picture, 'imageFile')|imagine_filter('thumb') }}" alt="">
                    <form method="post" action="{{ path('admin.picture.delete', {id:picture.id}) }}"
                          onSubmit="return confirm('Êtes-vous sùr de vouloir supprimer')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="supprimer" class="btn btn-danger">
                    </form>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{{ form_start(form) }}
<div class="row">
    <div class="col-md-5">
        {{ form_row(form.name) }}
    </div>

    <div class="col-md-2">
        {{ form_row(form.sold) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{ form_row(form.description) }}
    </div>
</div>
<div class="row">
               <div class="col-md-3">
                    {{form_row(form.surface)}}
                    </div>
                    <div class="col-md-3">
                    {{form_row(form.room)}}
                    </div>
                    <div class="col-md-3">
                    {{form_row(form.floor)}}
                    </div>
                    <div class="col-md-3">
                    {{form_row(form.price)}}
               </div>
          </div>

          <div class="row">
               <div class="col-md-4">
                    {{form_row(form.address)}}
                    </div>
                     <div class="col-md-4">
                    {{form_row(form.city)}}
                    </div>
                     <div class="col-md-4">
                    {{form_row(form.postalCode)}}
               </div>
          </div>
          <div class="row">
              <div class="col-md-6">
                  {{ form_row(form.pictureFiles) }}
              </div>
               <div class="col-md-6">
                    {{ form_row(form.options) }}
               </div>
          </div>
          <div class="input-group">
               <button class="btn btn-success" type="submit">Enregistrer</button>

          </div>

               {{ form_end(form) }}
     </div>