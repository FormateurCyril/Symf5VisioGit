{% extends 'base.html.twig' %}

{% block title 'Acheter' %}

{% block body %}

	<div class="container mt-4">

		<div class="jumbotron">
			<div class="container">
				{{ form_start(form)}}
				<div class="form-row align-items-end">
					<div class="col">
						{{ form_row(form.minSurface) }}
					</div>
					<div class="col">
						{{ form_row(form.maxPrice) }}
					</div>
					<div class="col">
						{{ form_row(form.options) }}
					</div>
					<div class="col">
						{{ form_row(form.submit)}}
					</div>
				</div>
			</div>
		</div>

		<h2>Acheter un bien</h2>

		<div class="row">
			{% for property in pagination %}
				{% include "property/_card.html.twig" %}
			{% endfor %}
		</div>
		<div class="pagination justify-content-center mt-4">
			{{ knp_pagination_render(pagination) }}
		</div>

	</div>


{% endblock %}
