{% extends "base.html.twig" %}

{% block body %}
     
     <div class="container">
          <h2>Bien : {{ property.name }} </h2>

          <div class="container">
               <div class="col-md-8">
                    {{property.address}}
                    <br>
                    {{property.postalCode}}, {{property.city}}

               </div>
               <div class="col-md-4">
                    {{property.price}}
               </div>
          </div>


          <div class="row">
               <div class="col-md-6">
                    <h3>Caractèristique</h3>
                    <table class="table table-striped">
                         <tr>
                              <td>Surface</td>
                              <td>{{property.surface}}</td>
                         </tr>
                         <tr>
                              <td>Chambre</td>
                              <td>{{property.room}}</td>
                         </tr>
                         <tr>
                              <td>Étage</td>
                              <td>{{property.floor}}</td>
                         </tr>
                    </table>
               </div>
               <div class="col-md-6">
                    <p>{{ property.description }} </p>               
               </div>

          </div>

     </div>


{% endblock %}